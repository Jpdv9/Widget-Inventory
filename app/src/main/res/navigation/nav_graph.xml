<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
    android:id="@+id/homeFragment"
    android:name="com.example.widgetinventory.ui.home.HomeFragment"
    android:label="fragment_home"
    tools:layout="@layout/fragment_home">

    <action
        android:id="@+id/action_homeFragment_to_addProductFragment"
        app:destination="@id/addProductFragment" />

    <action
        android:id="@+id/action_homeFragment_to_productDetailFragment"
        app:destination="@id/productDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.widgetinventory.ui.addproduct.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product">

        <action
            android:id="@+id/action_addProductFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.widgetinventory.ui.detail.ProductDetailFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail">
        <argument
            android:name="productId"
            app:argType="integer"
            android:defaultValue="3" />
        <action
            android:id="@+id/actionProductDetailFragmentToEditProductFragment"
            app:destination="@id/editProductFragment"/>
    </fragment>

    <fragment
        android:id="@+id/editProductFragment"
        android:name="com.example.widgetinventory.ui.edit.EditProductFragment"
        android:label="fragment_edit_product"
        tools:layout="@layout/fragment_edit_product">
        <argument
            android:name="productId"
            app:argType="integer"
            android:defaultValue="3" />
    </fragment>

</navigation>