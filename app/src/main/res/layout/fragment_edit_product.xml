<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.widgetinventory.ui.edit.EditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_negro_transparente"
        android:fitsSystemWindows="true"
        tools:context=".ui.edit.EditProductFragment">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gris_toolbar"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_edit"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Editar producto"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/ic_arrow_back_white"
                android:onClick="@{() -> viewModel.onBackClicked()}"/>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:id="@+id/container_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Código -->
            <TextView
                android:id="@+id/text_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.productCodeText}"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Código: 1234" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Nombre -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre artículo"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:hintTextColor="@color/white"
                app:expandedHintEnabled="false"
                app:hintAnimationEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@={viewModel.editableName}'
                    android:maxLength="40"
                    android:inputType="textCapWords"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Precio -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:hintTextColor="@color/white"
                app:expandedHintEnabled="false"
                app:hintAnimationEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text='@={viewModel.editablePrice}'
                    android:maxLength="20"
                    android:textColor="@color/white"
                    android:textColorHint="#AAAAAA" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Cantidad -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cantidad"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:hintTextColor="@color/white"
                app:expandedHintEnabled="false"
                app:hintAnimationEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text='@={viewModel.editableQuantity}'
                    android:maxLength="4"
                    android:textColor="@color/white"
                    android:textColorHint="#AAAAAA" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Boton Editar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_editar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            android:text="Editar"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:enabled='@{viewModel.isFormValid}'
            android:backgroundTint="@color/orange_primary"
            app:cornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@+id/container_fields"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{() -> viewModel.onEditClick()}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>